<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/display_view"
            android:layout_width="7dp"
            android:layout_height="91dp"
            android:layout_gravity="center"
            android:background="@color/colorAccent" />

        <ImageView
            android:id="@+id/display_image"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:background="@color/colorAccent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/display_view"
            android:scaleType="center" />

        <TextView
            android:id="@+id/display_title_pod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/display_image"
            android:textColor="@color/colorPrimary"
            android:text=""
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/display_oap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/display_title_pod"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/display_image"
            android:textSize="12sp"
            android:text=""
            android:textStyle="italic" />


        <ImageView
            android:id="@+id/display_image_time"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_below="@+id/display_oap"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/display_image"
            android:background="@drawable/time" />

        <TextView
            android:id="@+id/display_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/display_oap"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@+id/display_image_time"
            android:textSize="12sp"
            android:text="bhjbjhbhbhb"/>

        <ImageView
            android:id="@+id/display_calender"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_below="@+id/display_oap"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/display_duration"
            android:background="@drawable/calendar" />


        <TextView
            android:id="@+id/display_calender_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/display_oap"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@+id/display_calender"
            android:textSize="12sp"
            android:text="jbbhbhbh"/>

        <ImageButton
            android:id="@+id/download_pod"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/download" />

    </RelativeLayout>


</android.support.v7.widget.CardView>